<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBD2AE"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Image de la pizza -->
    <ImageView
        android:id="@+id/pizzaImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <!-- Conteneur pour les informations de la pizza -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Nom de la pizza -->
        <TextView
            android:id="@+id/pizzaNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Pizza Name"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <!-- Temps de cuisson -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Icône du temps de cuisson -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/montre" />

            <!-- Texte du temps de cuisson -->
            <TextView
                android:id="@+id/pizzaTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:paddingStart="4dp"
                android:text="25 min" />

            <!-- Icône de détail -->
            <ImageView
                android:id="@+id/pizzaDetailIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:src="@drawable/detail" />
        </LinearLayout>

        <!-- Nombre de portions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!-- Icône des portions -->

            <!-- Texte du nombre de portions -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/personne" />

            <TextView
                android:id="@+id/pizzaServingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:text="2 portions" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
